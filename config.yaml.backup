# Database Configuration
database:
  host: localhost
  user: postgres
  password: 244159
  dbname: postgres
  port: 5432
  sslmode: disable
  timezone: Asia/Shanghai

# Server Configuration  
server:
  port: ":8088"
  read_timeout: "10s"
  write_timeout: "10s"
  max_header_bytes: 1048576 # 1 MB

# Rate Limiting
rate_limit:
  requests: 100
  window: "1m" # 1 minute window

# JWT Configuration with Encryption
jwt:
  secret: "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters-long"
  encryption_key: "" # Will be auto-generated on first run
  encrypted: false   # Will be set to true after first encryption
  expiration_hours: 24

# Email Configuration
email:
  smtp_host: "smtp.gmail.com"
  smtp_port: 587
  smtp_username: "your-email@gmail.com"
  smtp_password: "your-gmail-app-password"
  from_email: "noreply@hamber.local"
  from_name: "Hamber Platform"

# File Storage Configuration
storage:
  type: "local" # Options: "local" or "minio"
  local_path: "./uploads"
  minio:
    endpoint: "localhost:9000"
    access_key: "minioadmin"
    secret_key: "minioadmin"
    use_ssl: false
    bucket: "hamber-uploads"

# OAuth Providers Configuration
oauth:
  google:
    enabled: false
    client_id: "your-google-client-id.apps.googleusercontent.com"
    client_secret: "GOCSPX-your-google-client-secret"
    redirect_url: "http://localhost:8088/api/auth/oauth/google/callback"
    scopes:
      - "openid"
      - "profile" 
      - "email"
  
  facebook:
    enabled: false
    client_id: "your-facebook-app-id"
    client_secret: "your-facebook-app-secret"
    redirect_url: "http://localhost:8088/api/auth/oauth/facebook/callback"
    scopes:
      - "public_profile"
      - "email"
  
  apple:
    enabled: false
    client_id: "your.apple.service.id"
    client_secret: "your-apple-client-secret"
    redirect_url: "http://localhost:8088/api/auth/oauth/apple/callback"
    scopes:
      - "name"
      - "email"
